{
  "name": "finance-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec ts-node src/app.ts",
    "start": "node dist/app.js",
    "build": "tsc -p tsconfig.json",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "check": "npm run lint && npm run build && npm run test",
    "generate:api": "openapi --input ./docs/swagger.json --output ./src/api",
    "tsoa:spec": "tsoa spec --configuration tsoa.json",
    "tsoa:routes": "tsoa routes --configuration tsoa.json",
    "tsoa:clean": "sed -i '' '/\"additionalProperties\": true/d' docs/swagger.json",
    "tsoa:build": "npm run tsoa:spec && npm run tsoa:routes && npm run tsoa:clean",
    "typeorm": "npx ts-node ./node_modules/typeorm/cli.js",
    "migration:generate": "sh -c 'npm run typeorm -- migration:generate -d src/data-source.ts ./migrations/$1' -",
    "migration:run": "npm run typeorm -- migration:run -d src/data-source.ts",
    "migration:revert": "npm run typeorm -- migration:revert -d src/data-source.ts",
    "migration:status": "npm run typeorm -- migration:show -d src/data-source.ts",
    "all": "npm run check && npm run tsoa:build && npm run generate:api"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@supabase/supabase-js": "^2.56.1",
    "@tsoa/runtime": "^6.6.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/swagger-ui-express": "^4.1.8",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.6.0",
    "tsyringe": "^4.10.0",
    "typeorm": "^0.3.26",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xlsx": "^0.18.5",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/jest": "^30.0.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/yamljs": "^0.2.34",
    "eslint": "^9.33.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "openapi-typescript-codegen": "^0.29.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.1"
  }
}
